{% extends 'base.html.twig' %}
    {% block body %}
    {{ form_start(form) }}
    <form method="POST">
        <div class="row">
            <div class="col card">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Datos Basicos del Usuario</h6>
                </div>
                <div class="p-5">
                    <div class="row">
                        <div class="col">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_row(form.name) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(form.surname) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_row(form.nick) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(form.email) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12 mb-6 mb-sm-3">
                                    {{ form_row(form.bio) }}
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group row">
                                <div class="col-sm-12 mb-6 mb-sm-3">
                                   {{ form_row(form.imageFile) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            {{ form_row(form._token) }}
                            {{ form_row(form.submit) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br/>
        <div class="col-sm-12 mb-6 mb-sm-3">
            
        </div>
    </form>
    {{ form_end(form) }}
    
    {% endblock %}
